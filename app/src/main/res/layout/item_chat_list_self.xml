<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10dp">

    <com.trailaider.app.ui.custom.CircleImageView
        android:id="@+id/imageView_self"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@color/colorGreen" />
<LinearLayout
    android:layout_width="wrap_content"
    android:background="@drawable/chat_bg"
    android:layout_toLeftOf="@+id/imageView_self"
    android:layout_toStartOf="@+id/imageView_self"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.trailaider.app.ui.custom.TextViewReguler
        android:id="@+id/textView_message_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:padding="@dimen/_10dp"
        android:textIsSelectable="true"
        android:background="@drawable/chat_bg"
        android:text="Message"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_14sp" />

    <com.trailaider.app.ui.custom.TextViewReguler
        android:id="@+id/textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/_10dp"
        android:text="Time"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_11sp" />
</LinearLayout>
</RelativeLayout>