<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.trailaider.app.ui.custom.TextViewReguler
            android:id="@+id/textView_week_day"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorGreen"
            android:gravity="center"
            android:text="Week 1 Day 1"
            android:textColor="@color/colorWhite" />

        <com.trailaider.app.ui.custom.TextViewBold
            android:id="@+id/textView_action"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/_30dp"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1 HOUR NON-STOP WALKING"
            android:textSize="@dimen/_25sp"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

</LinearLayout>