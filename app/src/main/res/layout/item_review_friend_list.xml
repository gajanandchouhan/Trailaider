<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10dp">

    <com.trailaider.app.ui.custom.CircleImageView
        android:id="@+id/imageView_friend"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@color/colorGreen" />


    <com.trailaider.app.ui.custom.TextViewReguler
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_toEndOf="@+id/imageView_friend"
        android:layout_toRightOf="@+id/imageView_friend"
        android:text="Friend Name"
        android:textColor="@color/colorDarkGray"
        android:textSize="@dimen/_15sp" />


</RelativeLayout>